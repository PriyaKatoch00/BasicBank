<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activities.SplashScreenActivity"
    android:background="#667995">

    <de.hdodenhof.circleimageview.CircleImageView
        android:layout_width="252dp"
        android:layout_height="263dp"
        android:id="@+id/splash_logo"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="150dp"
        android:src="@drawable/logo"/>
    <ProgressBar
        style="?android:attr/progressBarStyle"
        android:layout_width="90dp"
        android:layout_height="70dp"
        android:id="@+id/progressBar" android:layout_marginTop="99dp" android:layout_below="@+id/splash_logo"
        android:layout_marginLeft="150dp"/>
    <TextView
        android:text="@string/my_bank"
        android:layout_width="250dp"
        android:layout_height="67dp"
        android:id="@+id/textView" android:layout_marginTop="50dp"

        android:layout_marginLeft="100dp" android:textSize="40sp" android:textStyle="bold"
        android:layout_alignParentEnd="true" android:layout_alignParentRight="true"
        android:layout_marginRight="27dp" android:layout_marginEnd="27dp" android:textColor="#Fff"/>
    <TextView
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_below="@id/progressBar"
        android:layout_margin="100dp"
        android:textColor="#FFFFFF"
        android:textStyle="bold|italic"
        android:textSize="20sp"
        android:text="@string/by_priya_katoch"/>

</RelativeLayout>